<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:background="@drawable/background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.kwala.app.helpers.views.KwalaProgressSpinner
            android:id="@+id/submission_progress_spinner"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            />

        <TextView
            android:id="@+id/submission_spinner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:text="Submitting your quiz..."
            android:textSize="16sp"
            android:textColor="@color/kWhite"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/submission_success_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:text="Success!"
            android:textSize="16sp"
            android:textColor="@color/kWhite"
            android:gravity="center"
            android:visibility="gone"
            />

    </LinearLayout>

</RelativeLayout>