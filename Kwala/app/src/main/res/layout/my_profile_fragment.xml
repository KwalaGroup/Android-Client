<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/background">

    <LinearLayout
        android:id="@+id/profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"

            tools:src="@drawable/brittany"
            />

        <com.kwala.app.helpers.views.KwalaTextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            tools:text="@string/test_profile_name"
            android:textSize="26sp"
            android:textColor="@color/kWhite"
            android:gravity="center_horizontal|top"
            android:includeFontPadding="false"
            />

        <com.kwala.app.helpers.views.KwalaTextView
            android:id="@+id/profile_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            tools:text="@string/test_profile_age"
            android:textSize="16sp"
            android:textColor="@color/kWhite"
            />

        <ImageView
            android:id="@+id/profile_circle"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"

            android:src="@drawable/profile_circle"
            />

        <com.kwala.app.helpers.views.KwalaTextView
            android:id="@+id/profile_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"

            tools:text="@string/test_description"
            android:textSize="18sp"
            android:textColor="@color/kWhite"
            android:gravity="center"
            />

    </LinearLayout>

</ScrollView>