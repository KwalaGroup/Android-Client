<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="font" format="enum">
        <enum name="medium" value="0" />
        <enum name="regular" value="1" />
        <enum name="bold" value="2" />
        <enum name="italic" value="3" />
    </attr>

    <declare-styleable name="KwalaProgressSpinner">
        <attr name="tintColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="KwalaTextView">
        <attr name="font" />
    </declare-styleable>

    <declare-styleable name="KwalaButton">
        <attr name="font" />
    </declare-styleable>

    <declare-styleable name="KwalaEditText">
        <attr name="font" />
    </declare-styleable>

</resources>